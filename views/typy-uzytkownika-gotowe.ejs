<%- include('partial/header.ejs') %>
<%- include('partial/nav.ejs') %>

<div class="container-fluid mt-5">
    <div style="font-size: 2rem;" class="row">
        <div><a href="/typy"><button class="btn btn-primary">powrót na poprzednią strone</button></a></div>
        <div>Użytkownik: <%=nazwa?.username%></div>
        <div>Punkty: 0 pkt</div>
    </div>
<% if(czyWytypowal == 1) { %>
  <table class="table table-striped">
      <thead>
          <tr>
            <%= (spotkania.premium) ? '<img src="star.svg" />':'' %>
              <th scope="col">Drużyna 1</th>
              <th scope="col">Drużyna 2</th>
              <th scope="col">Grupa</th>
              <th scope="col">Typ</th>
              <th scope="col">Wynik</th>
          </tr>
      </thead>
      <tbody>
          <% spotkania.forEach(function(row) { %>
              <tr>
                  <td><%= row.gospodarz %></td>
                  <td><%= row.gosc %></td>
                  <td><%= row.grupa %></td>
                  <td><%= row.typies[0].typ %></td>
                  <td>Wynik</td>
                  <td><span style="margin-left: 15px;"><%- (row.premium) ? '<img src="/star.svg" />' :'' %></span></td>
              </tr>
          <% }); %>
      </tbody>
  </table>
  <% } else { %>
    <p style="font-size: 2rem; text-align: center;">Użytkownik jeszcze nie wypełnił formularza!</p>
    <% } %>
</div>